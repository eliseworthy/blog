!!! 5
%html
  %head
  %title mewie.com blog
  = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Allerta', :rel => 'stylesheet', :type => 'text/css'
  = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
  = stylesheet_link_tag 'print.css', :media => 'print'
  /[if lt IE 8]
    = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
  = stylesheet_link_tag 'application.css', :media => 'screen, projection'
  = javascript_include_tag :defaults 
  = csrf_meta_tag 

  %body
    #wrapper		
      #header
      %h1#logo
        mewie.com blog
      %p.notice= flash[:notice]
      %p.error= flash[:error]
      #admin_bar 
        - if current_admin
          signed in as #{current_admin.name} 
          | 
          = link_to "sign out", sign_out_url
        -  else
          = link_to "sign in", sign_in_url
    #content
      = yield 

