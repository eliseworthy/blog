%p#notice= notice

.post_show

  .post_header

    .post_title
      = @post.title

  .post_time
    Posted on:
    = @post.post_time

  - if @post.admin
    .admin
      Posted by:
      = link_to @post.admin.name, @post.admin  

  .post_content
    = @post.content

.post_nav_links
  = link_to 'Edit', edit_post_path(@post)
  \|
  = link_to 'Back', posts_path
